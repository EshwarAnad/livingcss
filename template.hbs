<!DOCTYPE html>
<html>
<head>
  <title>{{title}}</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/prism/1.4.1/themes/prism.css">
  {{#each stylesheets}}
  <link rel="stylesheet" href="{{this}}">
  {{/each}}
</head>
<body>

  <ul class="nav">
  {{#each sections}}
    <li class="nav-item">
      <a clss="nav-link" href="#{{id}}">{{name}}</a>

      {{#if children}}
        <ul class="subnav">
        {{#each children}}
          <li class="nav-item">
            <a clss="nav-link" href="#{{id}}">{{name}}</a>
          </li>
        {{/each}}
        </ul>
      {{/if}}
    </li>
  {{/each}}
  </ul>

  <main class="sections">
  {{#each sections}}
    <section class="section" id="{{id}}">
      <h2 class="section-title">{{name}}</h1>
      <div class="section-description">{{{description}}}</div>

      {{#each children}}
      <div class="subsection">
        <div id="{{../id}}-{{id}}">
          <h3 class="section-title">{{name}}</h1>
          <div class="section-description">{{{description}}}</div>
        </div>
      </div>
      {{/each}}

      {{#if state}}

      {{/if}}

      {{#if example}}
        {{{example.description}}}

        {{#unless hideCode}}
        <div class="markup">
          <pre class="code"><code class="language-{{code.type}}">{{code.description}}</code></pre>
        </div>
        {{/unless}}
      {{/if}}

    </div>
  {{/each}}
  </main>

  <script src="https://cdn.jsdelivr.net/prism/1.4.1/prism.js"></script>
  <script src="https://cdn.jsdelivr.net/prism/1.4.1/components/prism-markup.min.js"></script>
  {{#each scripts}}
  <script src="{{this}}"></script>
  {{/each}}
</body>
</html>